<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true"
        android:state_enabled="true">
        <layer-list>
            <item
                android:bottom="1dp"
                android:left="-3dp"
                android:right="-3dp"
                android:top="-3dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="@color/colorPrimary" />
                    <solid android:color="#66252525" />
                    <padding android:bottom="8dp" android:left="8dp" android:top="8dp" android:right="8dp"></padding>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item
                android:bottom="1dp"
                android:left="-3dp"
                android:right="-3dp"
                android:top="-3dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="0dp"
                        android:color="#000" />
                    <solid android:color="#66252525" />
                    <padding android:bottom="8dp" android:left="8dp" android:top="8dp" android:right="8dp"></padding>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>